<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- MasterCard Offer Card -->

    <!-- Visa Offer Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mastercard_offer_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mastercard_offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIMITED OFFER!"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mastercard_offer_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Get 20% discount with your Master credit cards"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mastercard_offer_title" />

        <ImageView
            android:id="@+id/mastercard_logo"
            android:layout_width="87dp"
            android:layout_height="89dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/offer_mastercard"
            app:layout_constraintEnd_toStartOf="@+id/mastercard_offer_details"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mastercard_offer_description" />

        <TextView
            android:id="@+id/mastercard_offer_details"
            android:layout_width="200dp"
            android:layout_height="49dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="24dp"
            android:text="Use your mastercard with any transaction and get 20% discount instantly!"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mastercard_offer_description" />

        <ImageView
            android:id="@+id/mastercard_arrow"
            android:layout_width="13dp"
            android:layout_height="17dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/see_more"
            app:layout_constraintStart_toEndOf="@+id/mastercard_offer_details"
            app:layout_constraintTop_toBottomOf="@+id/mastercard_offer_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/visa_offer_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mastercard_offer_card">

        <TextView
            android:id="@+id/visa_offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIMITED OFFER!"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/visa_offer_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Get 20% discount with your Master credit cards"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/visa_offer_title" />

        <ImageView
            android:id="@+id/visa_logo"
            android:layout_width="87dp"
            android:layout_height="89dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/offer_visa"
            app:layout_constraintEnd_toStartOf="@+id/visa_offer_details"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visa_offer_description" />

        <TextView
            android:id="@+id/visa_offer_details"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:text="Use your mastercard with any transaction and get 20% discount instantly!"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visa_offer_description" />

        <ImageView
            android:id="@+id/visa_arrow"
            android:layout_width="13dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/see_more"
            app:layout_constraintStart_toEndOf="@+id/visa_offer_details"
            app:layout_constraintTop_toBottomOf="@+id/visa_offer_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


